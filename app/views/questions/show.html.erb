    <div class="whole-question-detail" style="margin-left: 15px;">

      <div class="row">
        <div class="question-title">
          <h2><%= @question.title %></h2>
        </div>

      </div>

      <div class="row">
        <div class="question-description">
          <%= @question.content %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="question-buttons" class="btn-group" style="margin-left: -14px;">
            <% if can? :edit, @question %>
              <%= button_to 'Edit', edit_question_path(@question), method: :get, :class=> "btn btn-info" %>
            <% end %>
            <% if can? :destroy, @question %>
              <%= button_to 'Delete', question_path(@question), method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %>
            <% end %>  
          </div>
        </div>
        <div class="col-md-6">
        </div>
        <div class="col-md-2">
            <p> Posted By:<strong><%= @question.user.name %></strong></p>
            <strong><%= @question.created_at %></strong>
        </div>
      
      <div class="row" id="answer-count-margin">
        <h1 id="get_answer_count"><%= pluralize(@answers.count, "Answer") %></h1>  
      </div>
      <div id="ajax-answer-call">
        <%= render @answers %>
      </div>

      <div class="row" >
        <%= render partial: 'answers/form', locals:{answer: @question.answers.build}%>
      </div>
    </div>



