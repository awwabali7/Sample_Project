<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <h2>USERS WITH FOLLOWING EMAILS</h2>
  </div>
  <div class="col-md-4">
  </div>
  <div class="col-md-2" style="margin-top: 18px;">
    <%= button_to 'Create User', new_user_path, method: :get, :class=> "btn btn-info" %>
  </div>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Show </th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <% if user.id != current_user.id %>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td> Not Allowed</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>

